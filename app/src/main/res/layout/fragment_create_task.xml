<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CreateTask"
    android:background="@color/lightgray"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_alignParentTop="true"
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:text="Title"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:letterSpacing=".05"
            android:paddingRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"/>


        <EditText
            android:layout_below="@id/title_tv"
            android:id="@+id/title"
            android:background="@drawable/rectange_gradient"
            android:layout_width="match_parent"
            android:hint="Title"
            android:textAlignment="center"
            android:layout_marginTop="2dp"
            android:textColor="@color/black"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:letterSpacing=".05"
            android:paddingRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:minHeight="40dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/desc_tv"
            android:layout_width="wrap_content"
            android:text="Description"
            android:layout_below="@id/title"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:letterSpacing=".05"
            android:paddingRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/descripton_linear"
            android:layout_below="@id/desc_tv"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="2dp"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rectange_gradient">

            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:hint="Description"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:paddingLeft="20dp"
                android:background="@color/transparent"
                android:textStyle="bold"
                android:singleLine="false"
                android:inputType="textMultiLine"
                android:minHeight="40dp"
                android:letterSpacing=".05"
                android:paddingRight="20dp"
                android:layout_height="40dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnCreateTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_margin="20dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btnsignin_gradient"
            android:text="@string/createTask"
            android:textColor="#FFFFFF" />


    </RelativeLayout>


</FrameLayout>